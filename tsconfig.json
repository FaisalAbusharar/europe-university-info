{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", 
  "**/*.tsx", ".next/types/**/*.ts", "**/*.js", "**/*.jsx",  
  "src/app/components/country.jsx",
   "", "src/app/components/scrollFunction.jsx",
    "src/app/components/scrollFunction.jsx",
     "src/app/auth/login/page.jsx", "src/app/auth/signup.jsx",
      "src/app/user/page.jsx"],
  "exclude": ["node_modules"]
}

